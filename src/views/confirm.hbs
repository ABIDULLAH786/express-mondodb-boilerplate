<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Verification</title>
</head>

<body>
    <h1>Email Verification</h1>
    <div id="verification-message"></div>

    <script>
        // Extract token from URL
        const urlParams = new URLSearchParams(window.location.search);
        const token = urlParams.get('token');

        // Send token to server via API call
        fetch('/auth/verify-email', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ token })
        })
            .then(response => response.json())
            .then(data => {
                // Display verification message based on server response
                const messageElement = document.getElementById('verification-message');
                if (data.success) {
                    messageElement.innerText = 'Congratulations! Your email has been verified successfully.';
                } else {
                    messageElement.innerText = 'Error: ' + data.message;
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
    </script>
</body>

</html>